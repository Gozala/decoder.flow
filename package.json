{
  "version": "0.1.0",
  "name": "decoder.flow",
  "description": "Library for turning arbitrary input into a typed data.",
  "keywords": [
    "Decoder.flow",
    "typed",
    "flow",
    "JSON",
    "decode",
    "parse",
    "marshall",
    "structure"
  ],
  "main": "lib/Decoder",
  "module": "src/Decoder",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (http://jeditoolkit.com)",
  "repository": "https://github.com/Gozala/decoder.flow",
  "license": "MIT",
  "devDependencies": {
    "alias-quokka-plugin": "^0.1.0",
    "babel-cli": "6.24.1",
    "babel-preset-flow-node": "^1.0.2",
    "babel-register": "6.24.1",
    "blue-tape": "^1.0.0",
    "documentation": "^5.0.1",
    "flow-bin": "^0.51.1",
    "flow-copy-source": "^1.2.0",
    "husky": "^0.14.0",
    "jsdom-quokka-plugin": "^1.0.5",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4"
  },
  "scripts": {
    "test": "npm run test:flow && npm run test:tape",
    "test:tape": "blue-tape -r babel-register 'test/**/*.js'",
    "test:flow": "flow check",
    "build:clear": "rm -rf lib",
    "build:types": "flow-copy-source --verbose src lib",
    "build:node": "babel --out-dir lib src",
    "build:api": "documentation readme --section=API src/Decoder.js",
    "build:docs": "documentation build --document-exported src/** -f html --o docs",
    "build": "npm run build:node && npm run build:types",
    "prepublish": "npm run build && npm test",
    "precommit": "lint-staged",
    "start": "flow-copy-source --watch --verbose src lib & babel --watch --out-dir lib src"
  },
  "lint-staged": {
    "*.js": [
      "prettier --parser flow --no-semi --write",
      "git add"
    ]
  },
  "dependencies": {
    "corrupt": "^0.1.1",
    "result.flow": "^0.2.0"
  },
  "quokka": {
    "alias": {
      "decoder.flow": "./src/Decoder"
    },
    "pro": true,
    "babel": true,
    "plugins": [
      "jsdom-quokka-plugin",
      "alias-quokka-plugin"
    ]
  }
}
